<div class="container">
<h2><%= @list.name %></h2>
<%= link_to "Delete list?", list_path(@list), data: {turbo_method: :delete, turbo_confirm:"are you sure?"}, id: "delete-link", class: "hidden" %>
</div>
<br>
<br>

<div class="container">
  <h1>Movies</h1>
</div>

<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
    <h3><%= bookmark.movie.title %></h3>
    <h4>Rating : <%= "⭐️" * bookmark.movie.rating %></h4>
    <h5> <%= bookmark.movie.overview %> </h5>

    <hr>

    <h2>Review</h2>
    <p><%= bookmark.comment %></p>
    <hr>
     <%= link_to "delete bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm:"are you sure?"}, id:"delete-bookmark", class: "hidden" %>
  <% end %>
</div>
<br>
<br>
<div class="container">
  <h2>Add a new movie</h2>
  <%= simple_form_for [ @list, @bookmark ] do |f| %>
    <%= f.input :comment, placeholder: 'Add comment' %>
    <%= f.association :movie %>
    <%= f.submit "Add movie" %>
  <% end %>
</div>

<div class="container">
<%= link_to "back_to_overview", root_path %>
</div>
